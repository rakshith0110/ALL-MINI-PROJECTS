package bill;

public class Pizza {
    // Fields for pizza properties
    private int price;
    private final boolean isVeg;
    private String bill;

    // Prices for extras, based on the provided table [cite: 15]
    private final int extraCheesePrice = 100;
    private final int extraToppingsPrice = 150;
    private final int takeawayPrice = 20;

    private int basePizzaPrice;
    private boolean isExtraCheeseAdded = false;
    private boolean isExtraToppingsAdded = false;
    private boolean isOptedForTakeaway = false;

    /**
     * Constructor for a standard pizza.
     * Sets the base price based on whether it is vegetarian or not[cite: 15].
     * @param isVeg true for a vegetarian pizza, false otherwise.
     */
    public Pizza(boolean isVeg) {
        this.isVeg = isVeg;
        if (this.isVeg) {
            this.price = 300; // Veg Pizza price [cite: 15]
        } else {
            this.price = 400; // Non-Veg Pizza price [cite: 15]
        }
        basePizzaPrice = this.price;
    }

    /**
     * Adds extra cheese to the pizza[cite: 11].
     */
    public void addExtraCheese() {
        if (!isExtraCheeseAdded) {
            this.price += extraCheesePrice;
            isExtraCheeseAdded = true;
        }
    }

    /**
     * Adds extra toppings to the pizza[cite: 11].
     */
    public void addExtraToppings() {
        if (!isExtraToppingsAdded) {
            this.price += extraToppingsPrice;
            isExtraToppingsAdded = true;
        }
    }

    /**
     * Opts for takeaway, adding a packaging charge[cite: 13].
     */
    public void addTakeaway() {
        if (!isOptedForTakeaway) {
            this.price += takeawayPrice;
            isOptedForTakeaway = true;
        }
    }

    /**
     * Generates and prints the final bill[cite: 13].
     */
    public void getBill() {
        StringBuilder billBuilder = new StringBuilder();
        billBuilder.append("Base Pizza Price: ").append(this.basePizzaPrice).append("\n");

        if (isExtraCheeseAdded) {
            billBuilder.append("Extra Cheese Added: ").append(extraCheesePrice).append("\n");
        }
        if (isExtraToppingsAdded) {
            billBuilder.append("Extra Toppings Added: ").append(extraToppingsPrice).append("\n");
        }
        if (isOptedForTakeaway) {
            billBuilder.append("Take Away: ").append(takeawayPrice).append("\n");
        }

        billBuilder.append("Total Bill: ").append(this.price).append("\n");
        this.bill = billBuilder.toString();

        System.out.println("--------------------BILL--------------------");
        System.out.println(this.bill);
        System.out.println("------------------------------------------");
    }
}